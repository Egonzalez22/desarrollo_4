<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="1">

        <record id="email_template_certificado_pharma" model="mail.template">
            <field name="name">Certificado PHARMA: Enviar por correo</field>
            <field name="model_id" ref="model_certificados_laboratorio"/>
            <field name="subject">Certificado de Laboratorio PHARMA: {{object.certificado_analisis_nro}}</field>
            <field name="email_from">{{user.email or ''}}</field>
            <field name="email_to">{{object.cliente_id.email}}</field>
            <field name="report_template" ref="modulo_pharma.reporte_certificado_laboratorio_action"/>
            <field name="report_name">{{(object.certificado_analisis_nro or '').replace('/','_')}}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <div style="margin: 0px; padding: 0px;">
                        Estimado Cliente,
                        <br/><br/>
                        Adjunto encontrará el Certificado de Laboratorio.
                        <br/><br/>
                        Saludos,
                        <br/>
                        Equipo de Soporte
                    </div>
                </div>
            </field>
            <field name="lang">{{object.cliente_id.lang}}</field>
            <field name="auto_delete" eval="False"/>
        </record>

