<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="account_payment_term_personalizacion" model="ir.ui.view">
            <field name="name">account.payment.term.personalizacion</field>
            <field name="model">account.payment.term</field>
            <field name="inherit_id" ref="account.view_payment_term_form" />
            <field name="arch" type="xml">

                <xpath expr="//field[@name='note']" position="after">
                    <field name="control_bloqueo" />
                    <field name="control_bloqueo_30_dias" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>