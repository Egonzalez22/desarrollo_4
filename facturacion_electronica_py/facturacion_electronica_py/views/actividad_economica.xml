<odoo>
    <record id="view_actividad_economica_tree" model="ir.ui.view">
        <field name="name">actividad.economica.tree</field>
        <field name="model">fe.actividad_economica</field>
        <field name="arch" type="xml">
            <tree string="Actividades Económicas">
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <record id="view_actividad_economica_form" model="ir.ui.view">
        <field name="name">actividad.economica.form</field>
        <field name="model">fe.actividad_economica</field>
        <field name="arch" type="xml">
            <form string="Actividad Económica">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_actividad_economica" model="ir.actions.act_window">
        <field name="name">Actividades Económicas</field>
        <field name="res_model">fe.actividad_economica</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_create">
                Crea una nueva actividad económica.
            </p>
        </field>
    </record>

    <menuitem 
        id="actividad_economica_menu" 
        name="Actividades Económicas" 
        parent="account.menu_finance_configuration" 
        sequence="10" 
        action="action_actividad_economica"/>

</odoo>
