<odoo>
    <data>

        <template id="facturacion_electronica_py.facturas_ticket_template">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="o">
                    <!-- se verifica si es documento electronico -->
                    <t t-if="o.documento_electronico">
                        <t t-set="version_factura" t-value="'ORIGINAL'" />
                        <t t-if="o.state=='cancel'">
                            <t t-set="mensaje_marca_agua" t-value="'FACTURA ANULADA'" />
                        </t>
                        <t t-elif="o.state=='draft'">
                            <t t-set="mensaje_marca_agua"
                                t-value="'BORRADOR  - NO VALIDO COMO CREDITO FISCAL'" />
                        </t>
                        <t t-else="">
                            <t t-set="mensaje_marca_agua" t-value="" />
                        </t>

                        <!-- Si es autofactura, incluimos el reporte de autofactura -->
                        <t t-if="o.tipo_documento=='autofactura'">
                            <t t-call="facturacion_electronica_py.autofactura" />
                        </t>
                        <t t-else="">
                            <t t-call="facturacion_electronica_py.factura_ticket" />
                        </t>
                    </t>
                    <t t-else="">
                        <div class="page">
                            <strong>No es un documento electr√≥nico</strong>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <record id="facturacion_electronica_py.paperformat_factura_ticket" model="report.paperformat">
            <field name="name">Ticket</field>
            <field name="format">custom</field>
            <field name="page_height">800</field>
            <field name="page_width">80</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">7</field>
            <field name="margin_bottom">7</field>
            <field name="margin_left">5</field>
            <field name="margin_right">5</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">0</field>
            <field name="dpi">96</field>
        </record>

        <record id="factura_ticket_report_action" model="ir.actions.report">
            <field name="name">KUDE Ticket</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">facturacion_electronica_py.facturas_ticket_template</field>
            <!-- <field name="report_file">account.report_invoice_with_payments</field> -->
            <field name="print_report_name">(object._get_report_base_filename())</field>
            <!-- <field name="attachment">(object.state == 'posted') and ((object.name or 'INV').replace('/','_')+'.pdf')</field> -->
            <!-- <field name="binding_model_id" ref="model_account_move"/> -->
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="facturacion_electronica_py.paperformat_factura_ticket"/>
            <!-- <field name="multi" eval="True"/> -->
            <!-- <field name="groups_id" eval="[(4, ref('account.group_account_invoice')), (4, ref('account.group_account_readonly'))]"/> -->
        </record>
        
    </data>
</odoo>