<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<!-- tree view -->
		<record id="volumen_tree_view" model="ir.ui.view">
			<field name="name">volumen.tree.view</field>
			<field name="model">ventas.volumen</field>
			<field name="arch" type="xml">
				<tree string="Volumen">
					<field name="name" />
					<field name="description" />
					<field name="company_id" />
				</tree>
			</field>
		</record>

		<!-- formulario -->
		<record id="volumen_form_view" model="ir.ui.view">
			<field name="name">volumen.form.view</field>
			<field name="model">ventas.volumen</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<field name="name" />
							<field name="description" />
							<field name="company_id" />
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<!-- act window -->
		<record id="volumen_action_window" model="ir.actions.act_window">
			<field name="name">Volumen</field>
			<field name="res_model">ventas.volumen</field>
			<field name="view_mode">tree,form</field>
		</record>

		<!-- Agregamos el menu en la parte superior, en el menu de ventas configuracion -->
		<menuitem
			id="menu_volumen"
			name="Volumen"
			action="volumen_action_window"
			parent="ventas_custom_menu_content" 
			sequence="5" />

	</data>
</odoo>