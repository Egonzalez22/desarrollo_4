<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<!-- tree view -->
		<record id="motivo_tree_view" model="ir.ui.view">
			<field name="name">motivo.tree.view</field>
			<field name="model">ventas.motivo</field>
			<field name="arch" type="xml">
				<tree string="Motivos de Análisis">
					<field name="name" />
					<field name="description" />
					<field name="company_id" />
				</tree>
			</field>
		</record>

		<!-- formulario -->
		<record id="motivo_form_view" model="ir.ui.view">
			<field name="name">motivo.form.view</field>
			<field name="model">ventas.motivo</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<field name="name" />
							<field name="description" />
							<field name="company_id" />
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<!-- act window -->
		<record id="motivo_action_window" model="ir.actions.act_window">
			<field name="name">Motivos de Análisis</field>
			<field name="res_model">ventas.motivo</field>
			<field name="view_mode">tree,form</field>
		</record>

		<!-- Agregamos el menu en la parte superior, en el menu de ventas configuracion -->
		<menuitem
			id="menu_motivo"
			name="Motivo de Análisis"
			action="motivo_action_window"
			parent="ventas_custom_menu_content" 
			sequence="2" />

	</data>
</odoo>