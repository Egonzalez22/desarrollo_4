<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<!-- tree view -->
		<record id="presentacion_tree_view" model="ir.ui.view">
			<field name="name">presentacion.tree.view</field>
			<field name="model">ventas.presentacion</field>
			<field name="arch" type="xml">
				<tree string="Presentación">
					<field name="name" />
					<field name="codigo_corto" />
					<field name="company_id" />
				</tree>
			</field>
		</record>

		<!-- formulario -->
		<record id="presentacion_form_view" model="ir.ui.view">
			<field name="name">presentacion.form.view</field>
			<field name="model">ventas.presentacion</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<field name="name" />
							<field name="codigo_corto" />
							<field name="company_id" />
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<!-- act window -->
		<record id="presentacion_action_window" model="ir.actions.act_window">
			<field name="name">Presentación</field>
			<field name="res_model">ventas.presentacion</field>
			<field name="view_mode">tree,form</field>
		</record>

		<!-- Agregamos el menu en la parte superior, en el menu de ventas configuracion -->
		<menuitem
			id="menu_presentacion"
			name="Presentación"
			action="presentacion_action_window"
			parent="ventas_custom_menu_content" 
			sequence="5" />

	</data>
</odoo>