<odoo>
    <record id="wizard_informe_control_form" model="ir.ui.view">
        <field name="name">wizard.informe.control.form</field>
        <field name="model">wizard_informe_control</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="grupo_analisis" />
                    <label for="fecha_desde" string="Rango de fecha"/>
                    <div class="o_row">
                        <field name="fecha_desde" placeholder="desde" class="oe_inline o_hr_narrow_field"/> - <field name="fecha_hasta" placeholder="hasta" class="oe_inline o_hr_narrow_field"/>
                    </div>
                    <field name="ordenes_ids" invisible="1"/>
                    <field name="metodos_permitidos_ids" invisible="1"/>
                    <field name="tipo_metodo" />
                    <field name="metodos_ids" attrs="{'invisible':[('tipo_metodo', '!=', 'por_metodos')]}"/>
                </group>
                <footer>
                    <button name="action_print_pdf" string="Imprimir PDF" type="object" class="btn-primary" />
                    <button name="action_print_excel" string="Imprimir XSLX" type="object" class="btn-primary" />
                    <button name="action_cancel" string="Cerrar" type="object" class="btn-secondary" />
                </footer>
            </form>
        </field>
    </record>

    <record id="wizard_informe_control_action" model="ir.actions.act_window">
        <field name="name">Informe de control</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">wizard_informe_control</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="wizard_informe_control_form" />
        <field name="target">new</field>
        <field name="context">{}</field>
    </record>

    <menuitem id="wizard_informe_control_menu" name="Control de Solicitud, Ingreso de Muestra y Entrega de Resultados" action="wizard_informe_control_action" parent="quality_control.menu_quality_reporting" sequence="7" />
</odoo>