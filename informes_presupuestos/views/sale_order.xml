            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">


                <!-- <xpath expr="//field[@name='partner_invoice_id']" position="before">
                    <field name="departamento" />
                    <field name="atencion_de" />
                </xpath> -->


                <!-- debajo de date_order agregamos -->
                <!-- <xpath expr="//field[@name='date_order']" position="after">
                    <field name="tipo_presupuesto" /> -->
                    <!-- visible si tipo_presupuesto no es calificativo -->
                    <!-- <field name="cotizacion_nro" attrs="{'invisible': [('tipo_presupuesto', '=', 'calificativo')]}"/> -->
