                </xpath>
                <xpath expr="//div[@class='o_td_label']" position="attributes">
                    <attribute name="groups">base.group_user</attribute>
                </xpath>


                <!-- Agregamos otra pestaÃ±a para el detalle del presupuesto -->
                <xpath expr="//notebook" position="inside">

                    <page id="detalles" string="Detalles Presupuestos">
                        <group>
                            <field name="titulo" />
                            <field name="observacion" />
                            <field name="condicion" string="Condiciones generales de venta" widget="html" /> 
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
