<odoo>
	<data>
		<template id="informes_presupuestos.presupuesto_ventas2">
			<t t-foreach="docs" t-as="o">
				<t t-call="web.basic_layout">
					<link rel='stylesheet' href="/informes_presupuestos/static/src/css/informes.css" />
					<style>
					</style>

					<div class="page">
						<!-- # Cabecera -->
						<div id="cabecera">

							<div id="logo">
								<img t-att-src="'/informes_presupuestos/static/src/img/logo1.png'" style="width: 100%" />
							</div>

							<div class="clearfix"></div>
						</div>
						
						<!-- referencia -->
						<div id="referencia">
							<div>Lambaré, <t t-esc="o.get_current_date()" /></div>
							<div><strong>Cotización Nro:</strong> <t t-esc="o.name" /></div>
						</div>

						<!-- titulo informe -->
						<div id="titulo_informe">
							COTIZACIÓN DE MANTENIMIENTO PREVENTIVO
						</div>

						<!-- # Asunto -->
						<div id="asunto">
							<p>
								<strong>Señores</strong> <br />
								<t t-esc="o.partner_id.name" /><br />
								Control de Calidad <br />
								<t t-esc="o.partner_id.street_name" /><br />
								
								<strong>Atención:</strong> <t t-esc="o.get_related_partner()" /> <br /><br />
								<span class="underline bold">Presente:</span> <br />
							</p>

							<p>
								<strong>SUMI S.A. </strong> tiene el agrado de dirigirse a usted y por su intermedio a quien corresponda para presentarle la siguiente cotización de los servicios solicitados: <br />
							</p>
						</div>
						
						<!-- # Detalles -->
						<div id="detalles" class="border">
							<div class="titulo">
								<span class="bold"><t t-esc="o.titulo" /> </span>
							</div>
							<table class="table">
								<thead>
									<tr>
										<th>Item</th>
										<th>Descripción</th>
										<th>Precio Unit</th>
										<th>Precio Total</th>
									</tr>
								</thead>
								<tbody border="1">
									<t t-set="total" t-value="0" />

									<t t-foreach="o.order_line" t-as="l">
										<tr>
											<td style="width: 90px;">
												<span t-field="l.product_id.codigo_fabricante" />
											</td>
											<td>
												<span t-field="l.name" />
											</td>
											<td style="width: 100px" class="align-right">
												<span t-esc="o.get_amount_format(l.price_unit, o.currency_id)" />
											</td>
											<td class="align-right">
												<span t-esc="o.get_amount_format(l.price_unit * l.product_uom_qty, o.currency_id)" />
											</td>
										</tr>
										<!-- Sumamos el total -->
										<t t-set="total" t-value="total + (l.price_unit * l.product_uom_qty)" />
									</t>
								</tbody>
								<!-- Agregamos el total al footer -->
								<tfoot>
									<tr>
										<td colspan="3" class="align-right">
											<strong>Total General (IVA Incluido)</strong>
										</td>
										<td class="align-right">
											<strong><t t-esc="o.get_amount_format(total, o.currency_id)" /></strong>
										</td>
									</tr>
									<tr>
										<td colspan="4" class="align-right">
											<!-- verificamos si el tipo de moneda es usd -->
											<t t-if="o.currency_id.name == 'USD'">
												<strong>Son Dólares americanos <t t-esc="o.amount_to_text(total)" /></strong>
											</t>
											<t t-else="">
												<strong>Son Guaranies <t t-esc="o.amount_to_text(total)" /></strong>
											</t>
										</td>
									</tr>
									<tr>
										<td colspan="4">
											<strong>Obs:</strong> <t t-esc="o.observacion" />
										</td>
									</tr>
								</tfoot>
							</table>
						</div>

						<!-- # Condiciones -->
						<div id="condiciones">
							<div class="titulo">
								CONDICIONES GENERALES
							</div>
							<div class="condiciones_detalles">
								<t t-esc="o.condicion" />
							</div>
						</div>

						<!-- # Firma -->
						<div id="firma">
							<div class="firma_derecho">
								<t t-set="employee" t-value="o.get_employee()" />
								<strong><span t-esc="employee[0]"/></strong> <br />
								<span t-esc="employee[1]"/><br /> <br /> <br />
							</div>
							<div class="clearfix"></div>

							<div class="firma_izquierdo">
								Dirección: Pedro Gill Nº 935 Casi Ytororó <br />
								Teléfono: (595-21)908-555 <br />
								Lambaré - Paraguay <br />
								<a href="http://www.sumi.com.py">www.sumi.com.py</a> <br />
							  
							</div>
							<div class="firma_derecho">
								<t t-esc="o.codigo_calidad" /> <br />
								Vigencia: <span t-field="o.vigencia_calidad"/> 
							</div>
							<div class="clearfix"></div>
						</div>

						<div class="footer">
							<link rel='stylesheet' href="/informes_presupuestos/static/src/css/informes.css" />
							
							<div class="paginas">
								Página <span class="page" /> de <span class="topage" />
							</div>
							<div id="logo_footer">
								<div class="logo_footer">
									<img t-att-src="'/informes_presupuestos/static/src/img/logo1.png'" style="width: 100%" />
								</div>
							</div>

							<div class="clearfix"></div>
						</div>

					</div>
				</t>
			</t>
		</template>


		<record model="ir.actions.report" id="informes_presupuestos.presupuesto_ventas2_action">
			<field name="name">Presupuesto Preventivo</field>
			<field name="model">sale.order</field>
			<field name="report_type">qweb-pdf</field>
			<field name="paperformat_id" ref="informes_presupuestos.informe_paper_format" />
			<field name="report_name">informes_presupuestos.presupuesto_ventas2</field>
			<field name="print_report_name">'Presupuesto Preventivo %s' % (object.name or '')</field>
			<field name="binding_model_id" ref="model_sale_order" />
		</record>

	</data>
</odoo>