<odoo>
	<data>
		<!-- Equipos analiticos -->
		<template id="informes_presupuestos.presupuesto_ventas1">
			<t t-foreach="docs" t-as="o">
				<t t-call="web.basic_layout">
					<link rel='stylesheet' href="/informes_presupuestos/static/src/css/informes.css" />
					<style>
					</style>

					<div class="page">
						<!-- # Cabecera -->
						<div id="cabecera">

							<div id="logo">
								<img t-att-src="'/informes_presupuestos/static/src/img/logo1.png'" style="width: 100%" />
							</div>

							<div class="clearfix"></div>
						</div>
						
						<!-- # Asunto -->
						<div id="asunto">
							<div id="referencia">
								<div>Lambaré, <t t-esc="o.get_current_date()" /></div>
								<div><strong>Ref.:</strong> <t t-esc="o.name" /></div>
							</div>

							<p>
								Señores <br />
								<t t-esc="o.partner_id.name" /><br />
								<t t-esc="o.departamento" /><br />
								<strong>Atención:</strong> <t t-esc="o.get_related_partner()" /> <br />
								<span class="underline bold">Presente:</span> <br />
							</p>

							<p class="text-center">
								Nos dirigimos a Ud. a fin de presentarle el siguiente presupuesto: <br />
								<span class="underline bold"><t t-esc="o.titulo" /> </span>
							</p>
						</div>
						
						<!-- # Detalles -->
						<div id="detalles">
							<table class="table">
								<thead>
									<tr>
										<th>Item</th>
										<th>P/N</th>
										<th>Descripción</th>
										<th>Cant.</th>
										<th>Precio Unit</th>
										<th>Precio Total</th>
									</tr>
								</thead>
								<tbody>
									<t t-set="total" t-value="0" />

									<t t-set="index" t-value="1" />
									<t t-foreach="o.order_line" t-as="l">
										<tr>
											<td style="width: 30px;">
												<span t-esc="index" />
											</td>
											<td>
												<span t-field="l.product_id.codigo_fabricante" />
											</td>
											<td>
												<span t-field="l.name" />
											</td>
											<td class="align-right">
												<span t-esc="o.get_amount_format(l.product_uom_qty, o.currency_id)" />
											</td>
											<td style="width: 100px" class="align-right">
												<span t-esc="o.get_amount_format(l.price_unit, o.currency_id)" />
											</td>
											<td class="align-right">
												<span t-esc="o.get_amount_format(l.price_unit * l.product_uom_qty, o.currency_id)" />
											</td>
										</tr>
										<!-- Sumamos el total -->
										<t t-set="total" t-value="total + (l.price_unit * l.product_uom_qty)" />
										<t t-set="index" t-value="index + 1" />
									</t>
								</tbody>
								<!-- Agregamos el total al footer -->
								<tfoot>
									<tr>
										<td colspan="5" class="align-right">
											<strong>Total General (IVA Incluido)</strong>
										</td>
										<td class="align-right">
											<strong><t t-esc="o.get_amount_format(total, o.currency_id)" /></strong>
										</td>
									</tr>
									<tr>
										<td colspan="6" class="align-right">
											<!-- verificamos si el tipo de moneda es usd -->
											<t t-if="o.currency_id.name == 'USD'">
												<strong>Son Dólares americanos <t t-esc="o.amount_to_text(total)" /></strong>
											</t>
											<t t-else="">
												<strong>Son Guaranies <t t-esc="o.amount_to_text(total)" /></strong>
											</t>
										</td>
									</tr>
								</tfoot>
							</table>
						</div>

						<!-- # Observacion -->
						<div id="observacion">
							<strong>Obs:</strong> <t t-esc="o.observacion" />
						</div>

						<!-- # Condiciones -->
						<div id="condiciones">
							<t t-esc="o.condicion" />
						</div>


						<!-- # Firma -->
						<div id="firma">
							<div class="firma_derecho">
								<t t-set="employee" t-value="o.get_employee()" />
								<strong><span t-esc="employee[0]"/></strong> <br />
								<span t-esc="employee[1]"/><br /> <br /> <br />
							</div>
							<div class="clearfix"></div>

							<div class="firma_izquierdo">
								Dirección: Pedro Gill Nº 935 Casi Ytororó <br />
								Teléfono: (595-21)908-555 <br />
								Lambaré - Paraguay <br />
								<a href="http://www.sumi.com.py">www.sumi.com.py</a> <br />
							  
							</div>
							<div class="firma_derecho">
								<!-- <t t-esc="o.codigo_calidad" /> <br />
								Vigencia: <span t-field="o.vigencia_calidad"/>  -->
							</div>
							<div class="clearfix"></div>
						</div>

						<div class="footer">
							<link rel='stylesheet' href="/informes_presupuestos/static/src/css/informes.css" />

							<div class="paginas">
								<span class="page" />/<span class="topage" />
							</div>
							<div id="logo_footer">
								<div class="logo_footer">
									<img t-att-src="'/informes_presupuestos/static/src/img/logo1.png'" style="width: 100%" />
								</div>
							</div>

							<div class="clearfix"></div>
						</div>

					</div>
				</t>
			</t>
		</template>


		<record id="informes_presupuestos.informe_paper_format" model="report.paperformat">
			<field name="name">Formato Impresión Presupuestos</field>
			<field name="format">A4</field>
			<field name="orientation">Portrait</field>
			<field name="margin_top">5</field>
			<field name="margin_right">5</field>
			<field name="margin_left">5</field>
			<field name="margin_bottom">15</field>
			<field name="header_line" eval="False" />
			<field name="header_spacing">0</field>
			<field name="dpi">90</field>
		</record>

		<record model="ir.actions.report" id="informes_presupuestos.presupuesto_ventas1_action">
			<field name="name">Presupuesto de Venta</field>
			<field name="model">sale.order</field>
			<field name="report_type">qweb-pdf</field>
			<field name="paperformat_id" ref="informes_presupuestos.informe_paper_format" />
			<field name="report_name">informes_presupuestos.presupuesto_ventas1</field>
			<field name="print_report_name">'Presupuesto de Venta %s' % (object.name or '')</field>
			<field name="binding_model_id" ref="model_sale_order" />
		</record>

	</data>
</odoo>