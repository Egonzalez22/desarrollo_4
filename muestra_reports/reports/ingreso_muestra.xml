<odoo>
	<data>
        <template id="muestra_reports.ingreso_muestra">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.basic_layout">
                        <style>
                            .page {
                                page-break-after: always;
                            }
                            .page:last-child {
                                page-break-after: auto;
                            }
                        </style>
                        <t t-foreach="o.move_ids_without_package" t-as="move">
                            <t t-foreach="o.move_line_ids_without_package" t-as="move_line">
                                <t t-if="move.id == move_line.move_id.id">
                                    <div class="page">
                                        <div class="header">
                                            <div class="col-25 p-6">
                                                <div id="logo">
                                                    <img t-att-src="'/muestra_reports/static/src/logo.png'" style="text-align: center; width:25%" />
                                                </div>
                                            </div>
                                        </div>
                                         <t t-set="muestras" t-value="env['sale.order'].search([('name', '=', move.picking_id.origin)])"/> 
                                        
                                        <table class="table tabla_encabezado" >
                                            <tr>
                                                <th style="padding: 2px;"> Fecha:  </th>
                                                <td style="padding: 2px; font-weight: normal;"> <span t-esc="muestras.date_order"/>  </td>
                                                <th style="padding: 2px;"> Nombre:  </th>
                                                <td style="padding: 2px; font-weight: normal;"> <span t-field="o.partner_id"/>  </td>
                                                <th style="padding: 2px;"> Solicitud N°: </th>
                                                <!-- <td style="padding: 2px; font-weight: normal;"> <span t-esc="move_line.codigo_muestra[-5:]"/>  </td> -->
                                                <td style="padding: 2px; font-weight: normal;"> <span t-esc="move_line.codigo_muestra and move_line.codigo_muestra[-5:] or ''"/>
                                                </td>
                                            </tr>
                                        </table>
                                        <table class="table" style="">
                                            <thead class="tabla-encabezado_resultado">
                                                
                                                <tr>
                                                    <th colspan="3" style="text-align:center;" class="titulo"><b>Analisis Solicitados</b></th>
                                                </tr>
                                                <tr class="" style="text-align: center;">
                                                    <th>Tipo de muestra</th>
                                                    <th>N° de muestra</th>
                                                    <th>Lote</th>
                                                </tr>
                                            </thead>
                                            <tbody >
                                            
                                                <tr class="">
                                                    <td  style="text-align: center;">
                                                        <span t-field="move.product_id"/>
                                                    </td>
                                                    <td style="text-align: center;">
                                                        <span t-field="move_line.codigo_muestra"/>
                                                        
                                                    </td>

                                                    <td style="text-align: center;">
                                                        <span t-field="move_line.nro_lote"/>
                                                    </td>
                                                    
                                                    
                                                </tr>
                                            </tbody>
                                            <tbody >
                                                <t t-set="muestras" t-value="env['sale.order'].search([('name', '=', move.picking_id.origin)])"/> 
                                                <t t-set="muestras_ventas" t-value="muestras.muestras_ids"/> 
                                                <t t-foreach="muestras_ventas.metodos_ids" t-as="metodos">
                                                    <t t-foreach="muestras_ventas.muestra_id" t-as="product">
                                                        <t t-if="move.product_id.id == product.id">
                                                            <tr class="">
                                                                <th colspan="3">
                                                                 
                                                                <span t-esc="metodos.default_code"/> <span t-esc="metodos.name"/>
                                                                </th>
                                                            </tr>
                                                        </t>
                                                    </t>    
                                                </t>
                                            </tbody>
                                        

                                        </table>

                                        
                                    </div>
                                </t>
                            </t>     
                        </t>    
                    </t>
                </t>
                
                    
            </t>


        </template>
        <record id="muestra_reports.formato" model="report.paperformat">
            <field name="name">Formato muestra_reports</field>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">30</field>
            <field name="margin_right">5</field>
            <field name="margin_left">5</field>
            <field name="margin_bottom">5</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">25</field>
            <field name="dpi">96</field>
        </record>
        <record model="ir.actions.report" id="reporte_muestra_action">
            <field name="name">Ingreso de muestra</field>
            <field name="model">stock.picking</field>
            <field name="report_type">qweb-pdf</field>
            <field name="paperformat_id" ref="muestra_reports.formato"/>
            <field name="report_name">muestra_reports.ingreso_muestra</field>
            <field name="print_report_name">'Ingreso Muestra  %s' % (object.name or '')</field>
            <field name="binding_type">report</field>
        </record>

    </data>
</odoo>