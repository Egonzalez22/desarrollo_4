<odoo>
    <data>
        <template id="assets_common" name="interfaces_impresion_cheques pdf assets" inherit_id="web.basic_layout">
            <xpath expr="." position="inside">
                <link rel="stylesheet" type="text/scss" href="/interfaces_impresion_cheque/static/src/scss/report_check_commons.scss"/>
                <link rel="stylesheet" type="text/scss" href="/interfaces_impresion_cheque/static/src/scss/report_check_bottom.scss"/>
                <link rel="stylesheet" type="text/scss" href="/interfaces_impresion_cheque/static/src/scss/report_check_middle.scss"/>
                <link rel="stylesheet" type="text/scss" href="/interfaces_impresion_cheque/static/src/scss/report_check_top.scss"/>
            </xpath>
        </template>
        <template id="interfaces_impresion_cheque.cheque_diferido">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <div class="page article ckus_page ckus_middle_page" style="top: 0.17in; left: 0.25in;">
                        <style>
                            table{
                            width:100%;
                            border:hidden;
                            }
                            
                            span{
                            font-weight:bold !important;
                            }
                            <!-- td{
                            line-height:35px;
                            border: none !important;
                            } -->
                             tr, td {
                            line-height:35px;
                            border: none !important;
                            }
                        </style>
                        <table>                             
                            <tr>
                                 <td colspan="3" style="padding-left:755px; margin-top:15px; line-height:46px !important;">
                                    <span t-esc="o.formatear_monto(o.amount,currency=o.currency_id)"/>
                                    <span>.--</span>
                                </td>
                            </tr>
                            <tr>
                                
                                <td style="width:325px;"/>
                                <td colspan="2" style="line-height:77px !important;">
                                    <span t-esc="o.fecha_cheque.day" style="margin-left:243px;"/>
                                    <span t-esc="o.fecha_cheque.month" style="margin-left:32px"/>
                                    <span t-esc="str(o.fecha_cheque.year)[2:]" style="margin-left:56px"/>
                                    <span t-esc="o.fecha_vencimiento_cheque.day" style="margin-left:95px"/>
                                    <span t-esc="o.fecha_vencimiento_cheque.month" style="margin-left:39px"/>
                                    <span t-esc="str(o.fecha_vencimiento_cheque.year)[2:]" style="margin-left:73px"/>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="3" style="line-height:28px;">
                                    <span t-field="o.partner_id" style="margin-left:322px;"/>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="3" style="line-height:10Px !important;">
                                    <span t-esc="o.amount_to_text(o.amount, o.currency_id)" style="margin-left:321px"/>
                                    <span>.--</span>
                                </td>
                            </tr>
                        </table>
                    </div>
                </t>
            </t>
        </template>
        <template id="interfaces_impresion_cheque.cheque_vista">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <div class="page article ckus_page ckus_middle_page" style="top: 0.17in; left: 0.25in;">
                        <style>
                            table{
                            width:100%;
                            border:hidden;
                            }
                            span{
                                font-weight:bold !important;
                            }
                            
                            tr, td {
                            line-height:35px;
                            border: none !important;
                            }
                            
                        </style>
                        <table>
                            <tr>
                                <td colspan="3" style="padding-left:730px; margin-top:15px; line-height:27px !important;">
                                    <span class="monto" t-esc="o.formatear_monto(o.amount,currency=o.currency_id)"/>
                                    <span>.--</span>
                                </td>
                            </tr>
                            <tr>
                                <td style="width:520px;"/>
                                <td colspan="2" style="line-height:67px !important;">
                                    <span t-esc="o.fecha_cheque.day" style="margin-left:46px;"/>
                                    <span t-esc="o.fecha_cheque.month" style="margin-left:22px"/>
                                    <span t-esc="str(o.fecha_cheque.year)[2:]" style="margin-left:53px"/>
                                    <span style="margin-left:90px"/>
                                    <span style="margin-left:20px"/>
                                    <span style="margin-left:22px"/>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="3" style="line-height:10px;">
                                    <t t-if="o.es_portador">
                                        <!-- <br></br>
                                        <br></br>
                                        <br></br> -->
                                       <span style="margin-left:321px">Al portador</span>
                                    </t>
                                    <t t-else="">    

                                        <span t-field="o.partner_id" style="margin-left:322px;"/>
                                    </t>    
                                </td>
                            </tr>
                            <tr>
                                <td colspan="3" style="line-height: auto; word-wrap: break-word;">
                                    <span t-esc="o.amount_to_text(o.amount, o.currency_id)" style="margin-left:321px"/>
                                    <span>.--</span>
                                </td>
                            </tr>
                        </table>
                    </div>
                </t>
            </t>
        </template>


        <record id="interfaces_impresion_cheque.paperformat_cheque" model="report.paperformat">
            <field name="name">Cheques</field>
            <field name="format">custom</field>
            <field name="page_height">70</field>
            <field name="page_width">240</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">5</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
        </record>
        <report id="interfaces_impresion_cheque.cheque_diferido_action"
                print_report_name="(object.name)"
                model="account.payment"
                string="Cheque Diferido"
                report_type="qweb-pdf"
                paperformat="interfaces_impresion_cheque.paperformat_cheque"
                name="interfaces_impresion_cheque.cheque_diferido"/>

        <report id="interfaces_impresion_cheque.cheque_vista_action"
                print_report_name="(object.name)"
                model="account.payment"
                string="Cheque a la Vista"
                report_type="qweb-pdf"
                paperformat="interfaces_impresion_cheque.paperformat_cheque"
                name="interfaces_impresion_cheque.cheque_vista"/>

    </data>
</odoo>
