<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_cancel_contract_wizard" model="ir.ui.view">
        <field name="name">cancel.contract.wizard.form</field>
        <field name="model">hr.contract.cancel.wizard</field>
        <field name="arch" type="xml">
            <form string="Baja de Contrato">
                <group>
                    <field name="motivo_salida_id"/>
                </group>
                <footer>
                    <button string="Cambiar a Cancelado" type="object" name="confirm_cancel" class="btn-danger"/>
                    <button string="Cambiar a Vencido" type="object" name="confirm_close" class="btn-danger"/>
                    <button string="Cancelar" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>