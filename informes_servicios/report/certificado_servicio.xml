		<record id="informes_servicios.informe_paper_format" model="report.paperformat">
			<field name="name">Formato Impresión Certificado</field>
			<field name="format">A4</field>
			<field name="orientation">Portrait</field>
			<field name="margin_top">30</field>
			<field name="margin_right">5</field>
			<field name="margin_left">5</field>
			<field name="margin_bottom">10</field>
			<field name="header_line" eval="False" />
			<field name="header_spacing">25</field>
			<field name="dpi">96</field>
		</record>

		<record model="ir.actions.report" id="informes_servicios.certificado_servicio_action">
			<field name="name">Certificado de Servicio</field>
			<field name="model">helpdesk.ticket</field>
			<field name="report_type">qweb-pdf</field>
			<field name="paperformat_id" ref="informes_servicios.informe_paper_format" />
			<field name="report_name">informes_servicios.certificado_servicio</field>
			<field name="print_report_name">'Certificado %s' % (object.name or '')</field>
			<field name="binding_model_id" ref="model_helpdesk_ticket" />
		</record>

