<odoo>
    <record id="view_project_task_form" model="ir.ui.view">
        <field name="name">view_project_task_form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet//group//group[1]//field[@name='user_ids']" position="after">
                <field name="descripcion_falla"/>
                <field name="descripcion_trabajo"/>
                <field name="materiales_reemplazado"/>
            </xpath>
        </field>
    </record>

    <record id="view_informe_servicios_timesheets" model="ir.ui.view">
        <field name="name">view_informe_servicios_timesheets</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='timesheet_ids']//tree//field[@name='name']" position="after">
                <field name="hora_inicio" widget='float_time'/>
                <field name="hora_fin" widget='float_time'/>
            </xpath>
        </field>
    </record>
</odoo>