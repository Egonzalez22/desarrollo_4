<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="picking_remision_view_partner_form" model="ir.ui.view">
        <field name="name">picking_remision.view_partner_form</field>
        <field name="model">res.partner</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="chofer_info" string="Datos Chofer">
                    <group>
                        <group>
                            <field name="tipo_transporte"/>
                            <field name="marca_vehiculo"/>
                            <field name="identidad_vehiculo"/>
                            <field name="matricula"/>
                            <field name="responsable_flete"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
