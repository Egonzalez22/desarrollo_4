<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <data>
        <record id="picking_remision.view_picking_form" model="ir.ui.view">
            <field name="name">picking_remision_view_picking_form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/header" position="inside">
                    <field name="sequence_code_type" invisible="1"/>
                    <button name="crear_remision"
                            string="Crear Remision"
                            type="object" class="oe_highlight"
                            attrs="{'invisible':[('nota_remision_id', '!=', False), ('sequence_code_type', 'in', ['INT', 'OUT'])]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>