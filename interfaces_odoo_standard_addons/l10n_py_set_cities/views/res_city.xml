<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="view_city_tree" model="ir.ui.view">
            <field name="name">view_city_tree</field>
            <field name="model">res.city</field>
            <field name="inherit_id" ref="base_address_extended.view_city_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='zipcode']" position="replace">
                    <field name="code"/>
                </xpath>
                <xpath expr="//field[@name='state_id']" position="before">
                    <field name="district_id"/>
                </xpath>
            </field>
        </record>

        <menuitem id="menu_cities" name="Ciudades"
                  parent="contacts.menu_localisation" action="base_address_extended.action_res_city_tree"
                  sequence="3"/>

    </data>
</odoo>