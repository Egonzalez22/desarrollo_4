<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="interfaces_nota_credito_recepcion.res_config_settings_view_form" model="ir.ui.view">
            <field name="name">interfaces_nota_credito_recepcion.res_config_settings_view_form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <div data-key="account" position="inside">
                    <h2>Ubicación de devoluciones por defecto</h2>
                    <div class="row mt16 o_settings_container" id="ubicacion_devoluciones_defecto">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <!--<div class="o_setting_left_pane">-->
                            <!--</div>-->
                            <div class="o_setting_right_pane">
                                <field name="nota_credito_recepcion"/>
                                <label for="nota_credito_recepcion"/>
                                <div class="text-muted">
                                    Cuando una nota de crédito es validada, la recepción de las devoluciones se
                                    realizarán usando ésta operación
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </field>
        </record>
    </data>
</odoo>