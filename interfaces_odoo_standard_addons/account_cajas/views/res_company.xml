<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record model="ir.ui.view" id="res_company_form_view_inherit">
            <field name="name">res_company_form_view_inherit</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='vat']/.." position="after">
                    <group string="Sesiones de Caja">
                        <field name="use_caja_sessions"/>
                        <field name="caja_sessions_inbound_control" attrs="{'invisible':[('use_caja_sessions','=',False)]}"/>
                        <field name="caja_sessions_outbound_control" attrs="{'invisible':[('use_caja_sessions','=',False)]}"/>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</odoo>