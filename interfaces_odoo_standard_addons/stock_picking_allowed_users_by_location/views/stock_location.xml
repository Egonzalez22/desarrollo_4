<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="stock_location_form_view_inherit" model="ir.ui.view">
            <field name="name">stock_location_form_view_inherit</field>
            <field name="model">stock.location</field>
            <field name="inherit_id" ref="stock.view_location_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='removal_strategy_id']" position="after">
                    <field name="allowed_user_ids_inflows" widget="many2many_tags" domain="[('company_ids','=',company_id)]"/>
                    <field name="allowed_user_ids_outflows" widget="many2many_tags" domain="[('company_ids','=',company_id)]"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>