<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="view_move_form" model="ir.ui.view">
            <field name="name">account.move.inherit.view.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <field name="retencion_sugerida" invisible="True"/>
                    <button class ="oe_highlight" string="Emitir retencion" type="object" name="action_emitir_retencion" attrs="{'invisible':[('retencion_sugerida','=',False)]}"/>
                </xpath>
            </field>
        </record>

        <record id="view_in_invoice_bill_tree" model="ir.ui.view">
            <field name="name">account.move.inherit.view.tree</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_in_invoice_bill_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button string="Emitir retencion" type="object" name="action_emitir_retencion"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>