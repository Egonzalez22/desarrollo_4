<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- emitir.retencion.wizard form view -->
        <record id="l10n_py_retenciones.emitir_retencion_wizard_view_form" model="ir.ui.view">
            <field name="name">emitir.retencion.wizard.view.form</field>
            <field name="model">emitir.retencion.wizard</field>
            <field name="arch" type="xml">
                <form >
                    <sheet>
                        <group>
                            <group>
                                <field name="fecha_retencion"/>
                                <field name="journal_id" widget="selection"/>
                                <field name="invoice_ids" invisible="True"/>
                            </group>

                        </group>
                        <notebook>
                            <page string="Retenciones">
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="move_id" required="True"/>
                                        <field name="tipo_retencion" required="True"/>
                                        <field name="ret_concepto_iva" attrs="{'required':[('tipo_retencion','=','IVA')],'readonly':[('tipo_retencion','!=','IVA')]}"/>
                                        <field name="ret_concepto_renta" attrs="{'required':[('tipo_retencion','=','RENTA')],'readonly':[('tipo_retencion','!=','RENTA')]}"/>
                                        <field name="tax_id" widget="selection" attrs="{'required':[('tipo_retencion','=','IVA')],'readonly':[('tipo_retencion','!=','IVA')]}"/>
                                        <field name="move_currency_id" column_invisible="True"/>
                                        <field name="tipo_importe" required="True"/>
                                        <field name="invoice_amount" readonly="True"/>
                                        <field name="porcentaje" readonly="True"/>
                                        <field name="currency_id" column_invisible="True"/>
                                        <field name="retencion_amount"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <footer>
                            <button string="Generar retenciones" type="object" name="generar_retenciones" class="oe_highlight"/>
                            <button string="Cancelar" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>