<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- res.company inherit form view -->
        <record id="view_company_form" model="ir.ui.view">
            <field name="name">res.company.inherit.view.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="es_agente_retencion"/>
                    <field name="tipo_agente_retencion" attrs="{'invisible':[('es_agente_retencion','=',False)],'required':[('es_agente_retencion','!=',False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>