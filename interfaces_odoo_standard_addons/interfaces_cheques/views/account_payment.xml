<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <!-- account.payment tree view -->
        <record id="interfaces_cheques.cheque_tree" model="ir.ui.view">
            <field name="name">cheque_tree</field>
            <field name="model">account.payment</field>
            <field name="priority">200</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="fecha_cheque"/>
                    <field name="partner_id"/>
                    <field name="bank_id"/>
                    <field name="fecha_cheque"/>
                    <field name="fecha_vencimiento_cheque"/>
                    <field name="amount"/>
                    <field name="tipo_cheque"/>
                    <field name="journal_actual_id"/>
                    <field name="estado_cheque"/>
                </tree>
            </field>
        </record>
        <!-- model.name action window -->
        <record id="interfaces_cheques.cheques_action" model="ir.actions.act_window">
            <field name="name">Cheques</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.payment</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('tipo_pago','=','Cheque'),('state','=','posted')]</field>
            <field name="view_id" ref="interfaces_cheques.cheque_tree"/>
        </record>
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="interfaces_cheques.menu_root" name="TesorerÃ­a" parent="account_accountant.menu_accounting" sequence="4"/>
        <menuitem id="interfaces_cheques.cheques" name="Cheques" parent="interfaces_cheques.menu_root" action="interfaces_cheques.cheques_action"/>
    </data>
</odoo>
