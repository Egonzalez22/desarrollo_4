<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record model="ir.ui.view" id="res_company_form_inherit">
            <field name="name">res_company_form_inherit</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">

                <xpath expr="//notebook" position="inside">
                    <page name="representante_legal" string="Representante Legal">
                        <group>
                            <field name="representante_legal_identification_id"/>
                            <field name="representante_legal_nombre"/>
                            <field name="representante_legal_apellido"/>
                            <field name="representante_legal_birthday"/>
                            <field name="representante_legal_edad"/>
                            <field name="representante_legal_direccion"/>
                            <field name="representante_legal_profesion"/>
                            <field name="representante_legal_nacionalidad"/>
                            <field name="representante_legal_gender"/>
                            <field name="representante_legal_marital"/>
                        </group>
                    </page>
                </xpath>

            </field>
        </record>

    </data>
</odoo>


