<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- notas_remision_account.nota.remision form view -->
        <record id="notas_remision_form_view" model="ir.ui.view">
            <field name="name">notas_remision_form_view</field>
            <field name="model">notas_remision_account.nota.remision</field>
            <field name="arch" type="xml">
                <form >
                    <header>
                        <field name="state" widget="statusbar"/>
                        <button string="Confirmar" type="object" name="button_confirmar" attrs="{'invisible':[('state','!=','draft')]}" class="oe_highlight"/>
                        <button string="Cancelar" type="object" name="button_cancelar" attrs="{'invisible':[('state','!=','posted')]}"/>
                        <button string="Cambiar a borrador" type="object" name="button_borrador" attrs="{'invisible':[('state','!=','cancel')]}"/>
                    </header>
                    <sheet>
                        <h1 class="oe_title">
                            <field name="name" readonly="True"/>
                        </h1>
                        <group>
                            <group>
                                <field name="partner_id" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="journal_id" widget="selection" attrs="{'readonly':[('state','!=','draft')]}" domain="[('type','=','sale'),('active','=',True)]"/>
                                <field name="timbrado_id" widget="selection" attrs="{'readonly':[('state','!=','draft')]}" domain="[('journal_id','=',journal_id),('tipo_documento','=','nota_remision'),('active','=',True)]"/>
                                <field name="invoice_id" attrs="{'readonly':[('state','!=','draft')]}" domain="[('state','=','posted'),('move_type','=','out_invoice'),('partner_id','=',partner_id)]"/>
                                <!-- <field name="comprobante_venta_nro"/> -->
                                <field name="nro_timbrado_comprobante" attrs="{'readonly':[('state','!=','draft')]}"/>
                            </group>
                            <group>
                                <field name="motivo_traslado" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="fecha_expedicion" attrs="{'readonly':[('state','!=','draft')]}"/>


                            </group>
                        </group>
                        <notebook>
                            <page name="lineas" string="Líneas">
                                <field name="line_ids" attrs="{'readonly':[('state','!=','draft')]}">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="name" required="True"/>
                                        <field name="nro_lote_serie"/>
                                        <field name="qty"/>
                                        <field name="uom_id"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="traslado" string="Datos del traslado">
                                <group>
                                    <group string="Datos del traslado">
                                        <field name="fecha_inicio_traslado" attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="fecha_fin_traslado" attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="direccion_partida" attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="direccion_entrega" attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="ciudad_partida" attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="ciudad_entrega" attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="departamento_partida" attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="departamento_entrega" attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="kms_recorridos" attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="cambio" attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="motivo" attrs="{'readonly':[('state','!=','draft')]}"/>
                                    </group>
                                    <group string="Datos del transporte" name="grp_transporte">

                                        <field name="marca_vehiculo" attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="matricula" attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="matricula_remolque" attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="transportista" attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="ruc_transportista" attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="direccion_transportista" attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="chofer" attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="ruc_chofer" attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="direccion_chofer" attrs="{'readonly':[('state','!=','draft')]}"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <!-- notas_remision_account.nota.remision tree view -->
        <record id="notas_remision_account.nota_remision_view_tree" model="ir.ui.view">
            <field name="name">nota_remision_view_tree</field>
            <field name="model">notas_remision_account.nota.remision</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="fecha_expedicion"/>
                    <field name="state"/>
                    <field name="company_id"/>

                </tree>
            </field>
        </record>
        <!-->notas_remision_account.nota.remision action window -->
        <record id="notas_remision_account.remision_account" model="ir.actions.act_window">
            <field name="name">Notas de remisión</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">notas_remision_account.nota.remision</field>
            <field name="view_mode">tree,form,pivot</field>

        </record>
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="notas_remision_account.remision_menu" name="Notas de remisión" parent="account.menu_finance_receivables" action="notas_remision_account.remision_account" sequence="50"/>
    </data>
</odoo>