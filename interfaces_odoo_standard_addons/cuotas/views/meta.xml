<?xml version='1.0' encoding='utf-8'?>
<odoo>
        <data>
            <!-- cuotas.meta tree view -->
            <record id="cuotas.meta_view_tree" model="ir.ui.view">
                <field name="name">cuotas.meta.view.tree</field>
                <field name="model">cuotas.meta</field>
                <field name="arch" type="xml">
                    <tree editable="top">
                        <field name="name"/>                        
                        <field name="fecha_inicio"/>                        
                        <field name="fecha_fin"/>                        
                        <field name="currency_id" invisible="True"/>                        
                        <field name="total_amount"/>                        
                    </tree>
                </field>
            </record>
            <!-- cuotas.meta action window -->
            <record id="cuotas.meta_action" model="ir.actions.act_window">
                <field name="name">Metas</field>
                <field name="type">ir.actions.act_window</field>
                <field name="res_model">cuotas.meta</field>
                <field name="view_mode">tree</field>
            </record>
            <!-- This Menu Item must have a parent and an action -->
            <menuitem id="menu_metas" name="Metas" parent="account.menu_finance_entries" action="cuotas.meta_action" sequence="91"/>
        </data>
</odoo>