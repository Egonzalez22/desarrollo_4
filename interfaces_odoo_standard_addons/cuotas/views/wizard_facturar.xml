<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <!-- cuotas.wizard.facturar form view -->
        <record id="wizard_facturar_form" model="ir.ui.view">
            <field name="name">cuotas.wizard.facturar.view.form</field>
            <field name="model">cuotas.wizard.facturar</field>
            <field name="arch" type="xml">
                <form>

                    <group>
                        <group>
                            <field name="journal_id"/>
                            <field name="estado_factura"/>
                            <field name="fecha_factura"/>

                        </group>


                    </group>
                    <notebook>
                        <page string="Cuotas">
                            <field name="cuotas_ids"/>
                        </page>
                    </notebook>

                    <footer>
                        <button string="Generar" type="object" name="button_generar_factura" class="oe_highlight"/>
                        <button string="Cancelar" special="cancel"/>
                    </footer>

                </form>
            </field>
        </record>

    </data>


</odoo>
