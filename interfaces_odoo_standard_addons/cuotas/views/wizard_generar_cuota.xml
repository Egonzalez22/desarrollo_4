<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <!-- cuotas.wizard.facturar form view -->
        <record id="wizard_generar_cuotas_form" model="ir.ui.view">
            <field name="name">cuotas.wizard.generar.cuota.view.form</field>
            <field name="model">cuotas.wizard.generar.cuota</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="tipo_cuota"/>
                            <field name="partner_id"/>
                            <field name="product_id"/>
                            <field name="analytic_account_id"/>
                            <!-- <field name="analytic_tag_ids" widget="many2many_tags"/> -->
                            <field name="currency_id"/>
                            <field name="monto_cuota"/>
                            <field name="descuento_porcentaje"/>
                            <field name="cant_cuotas"/>
                            <field name="fecha_vencimiento"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Generar cuotas" type="object" name="button_generar_cuota" class="oe_highlight"/>
                        <button string="Cancelar" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>


</odoo>
