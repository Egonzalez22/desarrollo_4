<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <!-- model.name inherit form view -->
        <record id="view_move_form" model="ir.ui.view">
            <field name="name">view_move_form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
            
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='name']" position="after">
                    <field name="cuota_id"/>
                </xpath>
                
            </field>
        </record>

        <!-- model.name inherit search view -->
        <record id="view_account_invoice_filter" model="ir.ui.view">
            <field name="name">account.view_account_invoice_filter</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="before">
                    <field name="invoice_line_ids" string="Producto" filter_domain="['|',('invoice_line_ids.product_id.name','ilike',self),('invoice_line_ids.product_id.default_code','ilike',self)]"/>
                    
                </xpath>
                
            </field>
        </record>
    
    </data>
    

</odoo>
