<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- sale.product.variant.choose form view -->
        <record id="choose_view_form" model="ir.ui.view">
            <field name="name">sale.product.variant.choose.view.form</field>
            <field name="model">sale.product.variant.choose</field>
            <field name="arch" type="xml">
                <form >
                    <sheet>
                        <group>
                            <group>
                                <field name="order_id" invisible="True"/>
                                <!-- <field name="product_template_id"/> -->
                                <field name="default_code" />
                                <!-- <button string="Buscar" type="object" name="buscar_producto" attrs="{'invisible':[('product_template_id','!=',False)]}"/> -->
                            </group>

                        </group>
                        <notebook>
                            <page string="Variantes">
                                <field name="line_ids">
                                    <tree editable="bottom" create="0">
                                        <field name="product_image" widget="image" class="oe_avatar" options="{'preview_image': 'image_128'}" />
                                        <field name="product_id" />
                                        <field name="product_stock" />
                                        <field name="product_price"/>
                                        <field name="quantity"/>
                                        <field name="total" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <button string="Confirmar" type="object" name="button_confirm" class="oe_highlight"/>
                        <button string="Cancelar" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>