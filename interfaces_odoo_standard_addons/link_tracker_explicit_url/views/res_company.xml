<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record model="ir.ui.view" id="res_company_form_inherit">
            <field name="name">res_company_form_inherit</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='website']" position="after">
                    <field name="explicit_url_ids" widget="many2many_tags"
                           domain="['|',('company_id','=',False),('company_id','=',id)]"
                           context="{'default_company_id':id}"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>