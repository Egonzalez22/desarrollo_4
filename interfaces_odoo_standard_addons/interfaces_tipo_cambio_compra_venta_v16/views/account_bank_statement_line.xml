<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--        <record id="account_accountant.action_bank_statement_line_form_bank_rec_widget" model="ir.actions.act_window">-->
        <!--            <field name="context">{'default_compute_currency_rate_for_line':True}</field>-->
        <!--        </record>-->
        <record id="account_bank_statement_line_form_inherit" model="ir.ui.view">
            <field name="name">account_bank_statement_line_form_inherit</field>
            <field name="model">account.bank.statement.line</field>
            <field name="inherit_id" ref="account_accountant.view_bank_statement_line_form_bank_rec_widget"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount']" position="after">
                    <field name="compute_currency_rate_for_line" attrs="{'invisible':True}"/>
                    <field name="currency_rate" attrs="{
                    'invisible':[('compute_currency_rate_for_line','=',False)],
                    'readonly':[('freeze_currency_rate','=',False)],
                    'required':True,
                    }" force_save="True"/>
                    <field name="freeze_currency_rate" attrs="{'invisible':[('compute_currency_rate_for_line','=',False)]}"/>
                </xpath>
            </field>
        </record>
        <record id="account_bank_statement_line_tree_inherit" model="ir.ui.view">
            <field name="name">account_bank_statement_line_tree_inherit</field>
            <field name="model">account.bank.statement.line</field>
            <field name="inherit_id" ref="account_accountant.view_bank_statement_line_tree_bank_rec_widget"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount']" position="after">
                    <field name="currency_rate"/>
                    <field name="freeze_currency_rate"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>