			<field name="arch" type="xml">

				<!-- Agregamos un tab con los datos de facturas de exportacion  -->
				<xpath expr="//notebook/page[@id='other_tab']" position="after">
					<field name="es_factura_exportacion" invisible="1" />
					<page string="Factura de ExportaciÃ³n" attrs="{'invisible': [('es_factura_exportacion', '=', False)]}">
						<group>
							<field name="export_tipo_operacion" attrs="{'readonly': [('state', 'not in', ['draft'])]}" />
							<field name="export_condicion_negociacion" attrs="{'readonly': [('state', 'not in', ['draft'])]}" />
							<field name="export_pais_destino" attrs="{'readonly': [('state', 'not in', ['draft'])]}" />
							<field name="export_exportador_nacional" attrs="{'readonly': [('state', 'not in', ['draft'])]}" />
