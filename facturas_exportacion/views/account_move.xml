							<field name="export_instruccion_pago" attrs="{'readonly': [('state', 'not in', ['draft'])]}" />
							<field name="export_numero_embarque" attrs="{'readonly': [('state', 'not in', ['draft'])]}" />
							<field name="export_numero_manifiesto" attrs="{'readonly': [('state', 'not in', ['draft'])]}" />
							<field name="export_numero_barcaza" attrs="{'readonly': [('state', 'not in', ['draft'])]}" />
							<field name="export_informacion_adicional" attrs="{'readonly': [('state', 'not in', ['draft'])]}" />
						</group>
					</page>

				</xpath>
			</field>
		</record>
	</data>
</odoo>